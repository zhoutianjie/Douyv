<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/room_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardCornerRadius="@dimen/dimen_5"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.ztj.douyu.widgt.SelectableRoundedImageView
                android:id="@+id/room_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sriv_left_top_corner_radius="@dimen/dimen_5"
                app:sriv_right_top_corner_radius="@dimen/dimen_5"/>

            <TextView
                android:id="@+id/online_tv"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/nickname_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_above="@id/room_name_tv"
                android:layout_alignParentStart="true"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:singleLine="true"
                android:ellipsize="end"/>

            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="2dp"
                android:id="@+id/room_name_tv"
                android:layout_below="@id/room_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="12sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>